# 1inch Fusion+ API Configuration
INCH_FUSION_API_KEY=your_1inch_fusion_api_key_here
INCH_FUSION_API_URL=https://api.1inch.dev/fusion
INCH_FUSION_NETWORK_IDS=1,137,42161  # Ethereum, Polygon, Arbitrum

# NEAR Configuration
NEAR_NETWORK_ID=mainnet
NEAR_NODE_URL=https://rpc.mainnet.near.org
NEAR_ACCOUNT_ID=your-solver.near
NEAR_PRIVATE_KEY=ed25519:your_private_key_here

# Solver Registry Configuration
SOLVER_REGISTRY_CONTRACT=solver-registry.near
INTENTS_VAULT_CONTRACT=intents-vault.near
SOLVER_POOL_ID=1

# Solver Configuration
MIN_PROFIT_BPS=30  # Minimum profit in basis points (0.3%)
MAX_GAS_PRICE_GWEI=100  # Maximum gas price to pay
REBALANCE_THRESHOLD_PERCENT=20  # Trigger rebalance when imbalance exceeds 20%
ORDER_EXPIRY_SECONDS=180  # Order expiry time

# Supported Tokens (comma-separated contract addresses)
# Format: chainId:tokenAddress:symbol
SUPPORTED_TOKENS=1:0xA0b86991c5E1dd28e4f61D0095CFEba9735a0B935:USDC,137:0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174:USDC,42161:0xaf88d065e77c8cC2239327C5EDb3A432268e5831:USDC

# Liquidity Management
LIQUIDITY_BUFFER_PERCENT=10  # Keep 10% buffer for each token
MAX_EXPOSURE_PER_TOKEN=1000000  # Maximum exposure per token in USD
REBALANCE_INTERVAL_MS=300000  # Check rebalancing every 5 minutes

# Risk Management
MAX_SLIPPAGE_BPS=100  # Maximum allowed slippage (1%)
MIN_ORDER_SIZE_USD=10  # Minimum order size to process
MAX_ORDER_SIZE_USD=1000000  # Maximum order size to process

# TEE Configuration
TEE_MODE=development  # development | production
TEE_ATTESTATION_ENDPOINT=https://attestation.phala.network
PHALA_API_KEY=your_phala_api_key_here

# Monitoring
METRICS_PORT=9090
LOG_LEVEL=info  # error | warn | info | debug
HEALTH_CHECK_INTERVAL_MS=30000

# WebSocket Configuration (for monitoring orders)
WS_RECONNECT_INTERVAL_MS=5000
WS_MAX_RECONNECT_ATTEMPTS=10

# Database (for order history and analytics)
DATABASE_URL=postgresql://user:password@localhost:5432/fusion_solver
REDIS_URL=redis://localhost:6379